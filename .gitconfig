[user]
	name = Jason Moorhouse
	email = jmohouse6@users.noreply.github.com

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	
[init]
	defaultBranch = master

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true

[commit]
	verbose = true

[column]
	ui = auto

[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

[rerere]
	enabled = true
	autoUpdate = true

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[core]
	editor = nano
	autocrlf = input

[color]
	ui = auto
